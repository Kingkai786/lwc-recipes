@isTest
public class MyHttpCalloutMock implements HttpCalloutMock {
    public HTTPResponse respond(HTTPRequest req) {
        HttpResponse res = new HttpResponse();
        res.setStatusCode(200);
        res.setBody('{"success":true}');
        return res;
    }
}

@isTest
static void testCallout() {
    // Set the mock class to simulate the callout response
    Test.setMock(HttpCalloutMock.class, new MyHttpCalloutMock());

    Test.startTest();
        // Call the method that does the callout
        String result = MyCalloutClass.makeCallout();
    Test.stopTest();

    // Assert expected behavior
    System.assertEquals('{"success":true}', result);
}
